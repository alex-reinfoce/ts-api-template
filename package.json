{
  "name": "ts-api-template",
  "version": "0.0.1",
  "scripts": {
    "dev": "concurrently 'npm:watch-*'",
    "build": "npm run test && tsc",
    "test:watch": "vitest",
    "test": "vitest --coverage run",
    "doc": "typedoc",
    "watch-doc": "onchange 'src/**/*.ts' -- npm run doc",
    "watch-preview": "live-server doc",
    "postinstall": "npm run build && npm run doc"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "typedoc": "^0.22.12"
  },
  "main": "./lib/index.js",
  "devDependencies": {
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@vitest/coverage-istanbul": "^0.31.0",
    "@vitest/ui": "^0.31.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "typescript": "4.1.6",
    "vitest": "^0.31.0"
  },
  "license": "MIT"
}
